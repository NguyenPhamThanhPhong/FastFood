        <converters:ComboBoxText_to_ProductName x:Key="toAvatar"/>
        <converters:ComboBoxText_to_ProductQuantity x:Key="toQuantity"/>
        <converters:ComboBoxText_to_ProducPrice x:Key="toPrice"/>
