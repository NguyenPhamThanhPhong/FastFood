                    BorderThickness="2"
                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10" Height="28"
                    ItemsSource="{Binding products}"
                    TextBoxBase.TextChanged="ComboBox_TextChanged"
                    GotFocus="combobox_SP_GotFocus"
                  >
