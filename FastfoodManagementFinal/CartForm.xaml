<Page x:Class="FastfoodManagementFinal.CartForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
 
      xmlns:local="clr-namespace:FastfoodManagementFinal"
      mc:Ignorable="d" 
      d:DesignHeight="620" d:DesignWidth="807"
      Title="Product_Form">

    <Grid>

        <TextBlock Foreground="#C6C7E0" FontFamily="{StaticResource boldFont}" FontSize="42" Text="ĐƠN HÀNG" Margin="40,17,534,552" RenderTransformOrigin="0.845,0.596"/>
        <TextBlock Foreground="#EA5C2B" FontFamily="{StaticResource boldFont}" FontSize="42" Text="ĐƠN HÀNG" Margin="38,18,513,547" RenderTransformOrigin="0.845,0.596"/>

        <!--Bộ lọc-->
        <TextBlock Foreground="#3C4048" FontFamily="{StaticResource boldFont}" FontSize="14" Text="Bộ lọc" Margin="52,76,667,524" RenderTransformOrigin="0.845,0.596"/>
        <ComboBox
    x:Name="BoLocComboBox" FontFamily="{StaticResource boldFont}" Foreground="Black" BorderBrush="#B2B2B2" Background="#FFFFFF"
 
    IsEnabled="{Binding IsChecked, ElementName=OutlinedComboBoxEnabledCheckBox}"
    ItemsSource="{Binding ShortStringList}"
    Style="{StaticResource MaterialDesignOutlinedComboBox}" Margin="49,100,605,0" VerticalAlignment="Top" Height="51" >
            <ComboBoxItem Content="Họ tên"/>
            <ComboBoxItem Content="Ngày"/>
            <ComboBoxItem Content="SĐT"/>
            <ComboBoxItem Content="Giá"/>

        </ComboBox>
        <!--Tìm kiếm-->
        <TextBlock Foreground="#3C4048" FontFamily="{StaticResource boldFont}" FontSize="14" Text="Tìm kiếm" Margin="263,76,437,525" RenderTransformOrigin="0.845,0.596"/>

        <TextBox Margin="259,100,289,468" x:Name="txtEmail" FontSize="12" FontFamily="{StaticResource mainFont}" BorderThickness="1" Background="#FFFFFF"
                 BorderBrush="#B2B2B2" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
        <Image Source="/IMAGE/search-13-128.png" Margin="487,113,303,482" RenderTransformOrigin="-3.333,0.467" />

        <Button x:Name="loginBtn" Style="{StaticResource MaterialDesignFlatMidBgButton}" 
                materialDesign:ButtonAssist.CornerRadius="10" materialDesign:ShadowAssist.ShadowDepth="Depth0"
                Height="53" BorderBrush="#EA5C2B"
                Background="#EA5C2B" FontSize="20" Content="TẠO" FontFamily="{StaticResource boldFont}" Margin="640,98,62,468"/>




        <TextBlock Foreground="Black" FontFamily="{StaticResource boldFont}" FontSize="18" Text="STT" Margin="52,189,696,402" RenderTransformOrigin="0.845,0.596"/>
        <TextBlock Foreground="Black" FontFamily="{StaticResource boldFont}" FontSize="18" Text="Khách hàng" Margin="118,189,546,399" RenderTransformOrigin="0.845,0.596"/>
        <TextBlock Foreground="Black" FontFamily="{StaticResource boldFont}" FontSize="18" Text="Ngày" Margin="323,189,402,405" RenderTransformOrigin="0.845,0.596"/>
        <TextBlock Foreground="Black" FontFamily="{StaticResource boldFont}" FontSize="18" Text="SĐT" Margin="468,189,266,403" RenderTransformOrigin="0.845,0.596"/>
        <TextBlock Foreground="Black" FontFamily="{StaticResource boldFont}" FontSize="18" Text="Trị giá" Margin="609,189,99,399" RenderTransformOrigin="0.845,0.596"/>




    </Grid>
</Page>
