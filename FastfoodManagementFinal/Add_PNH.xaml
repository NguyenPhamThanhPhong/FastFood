                <DataTemplate>
                    <Grid Height="20" Width="415"  Margin="4,0,1,2" Grid.Row="0">
                        <Border CornerRadius="1" Height="18" BorderThickness="1.5" BorderBrush="#e6ebf7" Background="White" Margin="1,0,9,2"/>
                        <TextBlock Foreground="#9B9CA3" FontFamily="{StaticResource boldFont}" FontSize="8" Margin="21,3,384,7" Text="{Binding ImportProductID}"/>
                        <TextBlock Foreground="#9B9CA3" FontFamily="{StaticResource boldFont}" FontSize="8" Margin="65,3,298,2" Text="{Binding ImportProductName}" />
                        <TextBlock x:Name="txtblock_price" Foreground="#9B9CA3" FontFamily="{StaticResource boldFont}" FontSize="8" Margin="142,3,221,7" Text="{Binding ImportProductPrice}"/>
                        <TextBlock x:Name="txtblock_quantity" Foreground="#9B9CA3" FontFamily="{StaticResource boldFont}" FontSize="8" Margin="248,3,145,7" Text="{Binding ImportQuantity}"/>
                        <TextBlock Foreground="#9B9CA3" FontFamily="{StaticResource boldFont}" FontSize="8" Margin="328,3,37,7">
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource toTotal}">
                                    <Binding ElementName="txtblock_price" Path="Text"></Binding>
                                    <Binding ElementName="txtblock_quantity" Path="Text"></Binding>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
